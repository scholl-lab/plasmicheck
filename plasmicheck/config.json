{
    "required_tools": ["minimap2", "samtools"],
    "required_python_packages": ["Bio", "pysam", "jinja2", "weasyprint", "matplotlib"],
    "default_threshold": 0.8,
    "shift_bases": 500,
    "padding": 1000,
    "scoring": {
        "mate_bonus": 10,
        "clipping_penalty": 1,
        "mismatch_penalty": 1
    },
    "version": "0.12.0",
    "plot_size": {
        "width": 6,
        "height": 4
    },
    "alignment": {
        "minimap2_threads": 8,
        "samtools_threads": 4,
        "fasta_extensions": [".fasta", ".fa", ".fna", ".fsa", ".ffn"]
    },
    "indexing": {
        "minimap2_options": ["-d"],
        "samtools_options": []
    },
    "conversion": {
        "input_formats": ["genbank", "xdna"],
        "output_formats": ["fasta", "genbank"]
    },
    "plot_summary": {
        "figsize": {
            "width": 10,
            "height": 6
        },
        "colors": {
            "not_contaminated": "lightblue",
            "contaminated": "orange"
        },
        "linewidths": 0.5,
        "linecolor": "gray",
        "title": "Heatmap of Contamination Ratios by Sample and Plasmid",
        "xticks_rotation": 45,
        "xticks_ha": "right",
        "yticks_rotation": 0,
        "output_filename": "contamination_heatmap.png"
    },
    "paths": {
        "template_dir": "templates",
        "logo_path": "static/img/plasmicheck_logo_200px.png"
    }
}
